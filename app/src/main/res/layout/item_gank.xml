<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/white_graylight_corner_5_selecter"
              android:elevation="2dp"
              android:layout_margin="@dimen/recovery_default_margin_8dp"
              android:orientation="vertical"
              android:padding="16dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Freeline - Android平台上的秒级编译方案"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="web"
            android:textColor="@color/actionbar_bg"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_cato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Android"
            android:textColor="@color/red"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="2016-08-23T11:29:45.813Z"
            android:textColor="@color/blue"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="XiaoGu"
            android:textColor="@color/evl_red"
            android:textSize="14sp"/>

    </LinearLayout>

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>


</LinearLayout>