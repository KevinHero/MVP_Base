<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Main Content View -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_margin="8dp"
            android:background="@color/material_blue_grey_80"
            android:src="@mipmap/histotry"/>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@+id/iv_title"
            android:layout_toRightOf="@+id/iv_title"
            android:text="那些年，在网吧和小伙伴一起联机的游戏（满满的回忆）"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_title"
            android:layout_alignEnd="@+id/tv_title"
            android:layout_alignRight="@+id/tv_title"
            android:text="2015-12-25"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>